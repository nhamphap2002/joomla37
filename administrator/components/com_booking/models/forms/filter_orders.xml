<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_BOOKING_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_BOOKING_FILTER_STATE"
               description="COM_BOOKING_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`start_date` ASC">Start Dates Ascending</option><option value="a.`start_date` DESC">Start Dates Descending</option><option value="a.`end_date` ASC">End Dates Ascending</option><option value="a.`end_date` DESC">End Dates Descending</option><option value="a.`number_room` ASC">Number Rooms Ascending</option><option value="a.`number_room` DESC">Number Rooms Descending</option><option value="a.`number_persons` ASC">Number Personss Ascending</option><option value="a.`number_persons` DESC">Number Personss Descending</option><option value="a.`number_children` ASC">Number Childrens Ascending</option><option value="a.`number_children` DESC">Number Childrens Descending</option><option value="a.`order_note` ASC">Order Notes Ascending</option><option value="a.`order_note` DESC">Order Notes Descending</option><option value="a.`name_customer` ASC">Name Customers Ascending</option><option value="a.`name_customer` DESC">Name Customers Descending</option><option value="a.`phome` ASC">Phomes Ascending</option><option value="a.`phome` DESC">Phomes Descending</option><option value="a.`email` ASC">Emails Ascending</option><option value="a.`email` DESC">Emails Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>