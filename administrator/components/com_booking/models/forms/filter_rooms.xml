<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_BOOKING_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_BOOKING_FILTER_STATE"
               description="COM_BOOKING_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`image_room` ASC">Image Rooms Ascending</option><option value="a.`image_room` DESC">Image Rooms Descending</option><option value="a.`room_name` ASC">Number Rooms Ascending</option><option value="a.`room_name` DESC">Number Rooms Descending</option><option value="a.`number_room` ASC">Number Rooms Ascending</option><option value="a.`number_room` DESC">Number Rooms Descending</option><option value="a.`desc` ASC">Descs Ascending</option><option value="a.`desc` DESC">Descs Descending</option><option value="a.`price` ASC">Prices Ascending</option><option value="a.`price` DESC">Prices Descending</option><option value="a.`area` ASC">	Areas Ascending</option><option value="a.`area` DESC">	Areas Descending</option><option value="a.`beds` ASC">	Bedss Ascending</option><option value="a.`beds` DESC">	Bedss Descending</option><option value="a.`utilities` ASC">Utilitiess Ascending</option><option value="a.`utilities` DESC">Utilitiess Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>